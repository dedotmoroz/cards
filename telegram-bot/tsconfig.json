{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleDetection": "force",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true
  }
}