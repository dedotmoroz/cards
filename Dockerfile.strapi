FROM node:20

WORKDIR /app

# системные зависимости для sharp / swc
RUN apt-get update && apt-get install -y \
  python3 \
  build-essential \
  && rm -rf /var/lib/apt/lists/*

COPY strapi/cms/package*.json ./

RUN npm ci

COPY strapi/cms ./

ENV NODE_ENV=production

EXPOSE 1337

CMD ["npm", "run", "start"]