{
  "name": "flashcards-app",
  "version": "1.0.0",
  "scripts": {
    "db": "docker compose up --build",
    "stop": "docker compose down",
    "docker": "docker-compose -f docker-compose.yml up -d",
    "push": "npx drizzle-kit push --config drizzle.config.ts",
    "build": "tsc",
    "migrate-old": "npx drizzle-kit generate --config drizzle.config.ts",
    "start": "node dist/index.js",
    "startdocker": "npm run docker && npm run push && npm run dev",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:wait": "bash -c 'for i in {1..60}; do (echo > /dev/tcp/127.0.0.1/5432) >/dev/null 2>&1 && exit 0 || sleep 1; done; echo timeout && exit 1'",
    "migrate": "npx drizzle-kit push --config drizzle.config.ts",
    "dev": "npm run db:up && npm run db:wait && npm run migrate && tsx src/index.ts",
    "migrate:test": "dotenv -e .env.test -- npx drizzle-kit push --config drizzle.config.ts",
    "test": "dotenv -e .env.test -- jest --runInBand --silent=false"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "exceljs": "^4.4.0",
    "googleapis": "^144.0.0",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "fastify-sensible": "^3.1.2",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "ts-node": "^10.9.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  }
}
