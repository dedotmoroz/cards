{
  "name": "flashcards-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "db": "docker compose up --build",
    "stop": "docker compose down",
    "docker": "docker-compose -f docker-compose.yml up -d",
    "push": "npx drizzle-kit push --config drizzle.config.ts",
    "dev": "tsx src/adapters/http/start-server.ts",
    "build": "tsc",
    "test": "jest",
    "migrate": "npx drizzle-kit generate --config drizzle.config.ts",
    "start": "npm run docker && npm run push && npm run dev"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.4",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "fastify-sensible": "^3.1.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "ts-node": "^10.9.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  }
